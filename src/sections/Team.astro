---
import Section from "../components/Section.astro";
import SpreadLoveIcon from "../assets/icons/Spread-love.svg";
import CrownIcon from "../assets/icons/interface-essential-crown.svg";
import RocketIcon from "../assets/icons/business-product-startup-1.svg";
import Button from "../components/Button.astro";
import { data as contributorsData } from "../assets/contributors/contributors.js";
---

<Section id="team">
  <div class="flex flex-row">
    <div class="w-2/3 min-h-screen">
      <h1 class="text-4xl font-bold text-white uppercase max-w-xl">
        CodeCarbon is maintained by amazing contributors
      </h1>
      <p class="prose text-white text-lg">
        Here's the team that helped build Code Carbon
      </p>
      <div class="grid grid-cols-3 gap-4 mt-8 pr-30">
        {
          contributorsData.map((contributor) => (
            <div class="flex flex-col items-center">
              <CrownIcon class="size-10 mb-2 text-lime-300" />
              <img
                src={contributor.img_path}
                alt={contributor.name}
                class="rounded-full w-24 h-24 mb-2 grayscale"
              />
              <h2 class="text-xl font-bold text-lime-300">
                {contributor.name}
              </h2>
              <p class="text-lime-300">{contributor.job}</p>
              <p class="text-lime-300">{contributor.Organisation}</p>
            </div>
          ))
        }
      </div>
    </div>
    <div class="w-1/3 flex flex-col justify-center h-full pt-40">
      <SpreadLoveIcon class="w-85 mx-auto" />
      <h1 class="text-4xl font-bold text-white uppercase max-w-lg">
        Want to contribute?
      </h1>
      <p class="prose text-white">Join us and help us improve CodeCarbon!</p>
      <Button
        href="https://github.com/mlco2/codecarbon/blob/master/CONTRIBUTING.md"
        >I'd love to contribute</Button
      >
    </div>
  </div>
  <div class="flex flex-col items-center mt-8">
    <h1 class="text-2xl font-bold text-white uppercase max-w-3xl mt-8">
      CodeCarbon was developed by four partner organizations and is made freely
      available to the community
    </h1>
    TODO: Add logos of partner organizations here
  </div>
  <div class="flex justify-center p-10">
    <RocketIcon />
  </div>
</Section>
