---
import Section from "../components/Section.astro";
import DotCrossIcon from "../assets/icons/Dot-cross.svg";
const data = [
  {
    img_path: "assets/dashboard/device_emissions.png",
    description:
      "Emissions for individual code repositories based on infraestructure and power consumption.",
  },
  {
    img_path: "assets/dashboard/exemplary_equivalents.png",
    description: "Exemplary equivalents to put emissions in context.",
  },
  {
    img_path: "assets/dashboard/region_recommendations.png",
    description:
      "Recommends compute regions with lower carbon intensity for major cloud providers â€“ AWS, Azure, and GCP.",
  },
];
---

<Section id="dashboard">
  <div class="flex items-center justify-center gap-4">
    <DotCrossIcon />
    <h1 class="text-3xl font-bold uppercase">Dashboard</h1>
    <DotCrossIcon />
  </div>
  <h1 class="text-3xl font-bold uppercase p-4">
    Visualizing the outputs & insights
  </h1>
  {
    data.map((item, i) => (
      <div
        class={`flex items-center gap-4 p-4${i < data.length - 1 ? " border-b border-gray-500" : ""}`}
      >
        <img src={item.img_path} alt="" class="w-150 rounded-lg" />
        <p class="prose text-white text-lg">{item.description}</p>
      </div>
    ))
  }
  <!--TODO: Update screenshots using the new dashboard here-->
</Section>
