---
import Section from "../components/Section.astro";
const data = [
  { icon: "📦", text: "A lightweight, easy to use python library" },
  { icon: "🌍", text: "Open source, free & community driven" },
  { icon: "📊", text: "Effective visual outputs" },
];
---

<Section id="about">
  <h1 class="text-3xl font-bold text-white">What we are</h1>
  <div class="flex flex-row">
    <ul class="flex flex-row
    items-center justify-between p-4">
      {
        data.map((item) => (
          <li class="prose text-white max-w-xs p-2 text-center">
            {item.icon} {item.text}
          </li>
        ))
      }
    </ul>
  </div>
</Section>
