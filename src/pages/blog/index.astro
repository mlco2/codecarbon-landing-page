---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

import Layout from "../../layouts/Layout.astro";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const BASE_URL = import.meta.env.BASE_URL;
---

<Layout>
  <main class="w-[960px] max-w-full mx-auto px-4 py-10">
    <section>
      <ul class="flex flex-wrap gap-8 list-none m-0 p-0 max-sm:gap-2">
        {
          posts.map((post) => (
            <li class="w-[calc(50%-1rem)] first:w-full first:mb-4 first:text-center max-sm:w-full max-sm:text-center max-sm:first:mb-0">
              <a
                href={`${BASE_URL}blog/${post.id}/`}
                class="block no-underline transition-all duration-200 ease-in-out [&>*]:no-underline [&>*]:transition-all [&>*]:duration-200 [&>*]:ease-in-out hover:[&>h4]:text-[rgb(var(--accent))] hover:[&>.date]:text-[rgb(var(--accent))] hover:[&>img]:shadow-[var(--box-shadow)]"
              >
                {post.data.heroImage && (
                  <Image
                    width={720}
                    height={360}
                    src={post.data.heroImage}
                    alt=""
                    class="mb-2 rounded-xl w-full [.first\:&]:w-full"
                  />
                )}
                <h4 class="title m-0 text-[rgb(var(--black))] leading-none [li:first-child_&]:text-[2.369rem] max-sm:[li:first-child_&]:text-[1.563rem]">
                  {post.data.title}
                </h4>
                <p class="date m-0 text-[rgb(var(--gray))]">
                  <FormattedDate date={post.data.pubDate} />
                </p>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</Layout>
